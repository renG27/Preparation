<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_djbc_docs_tree" model="ir.ui.view">
        <field name="name">djbc.docs.tree</field>
        <field name="model">djbc.docs</field>
        <field name="arch" type="xml">
            <tree string="DJBC Documents" js_class="djbc_list_with_import">
                <field name="no_dok" string="Nomor Dokumen BC"/>
                <field name="tgl_dok" string="Tanggal Dokumen BC"/>
                <field name="jenis_dok" string="Doc Type"/>
                <field name="nm_cargoowner" string="Nama Cargo Owner"/>
                <field name="forwarder_name" string="Nama FF/PPJK"/>
                <field name="shipping_name" string="Shipping Name"/>
                <field name="terminal" string="Terminal"/>
                <field name="create_uid" string="Created by"/>
            </tree>
        </field>
    </record>

    <record id="view_djbc_docs_form" model="ir.ui.view">
        <field name="name">djbc.docs.form</field>
        <field name="model">djbc.docs</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_unlock" type="object" string="Edit Record" class="oe_highlight" attrs="{'invisible': [('is_locked', '=', False)]}"/>
                </header>
                <sheet>
                    <field name="is_locked" invisible="1"/>
                    <group>
                        <group>
                            <field name="jenis_dok" string="Doc Type" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="kode_dok_type" string="Kode Document Type"/>
                            <field name="no_dok" string="Nomor Dokumen BC" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="tgl_dok" string="Tanggal Dokumen BC" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="no_aju" string="Nomor Pengajuan" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="tgl_aju" string="Tanggal Pengajuan" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="no_bl" string="Nomor B/L" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="jenis_bl" string="Jenis B/L" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="tgl_bl" string="Tanggal B/L" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="no_doc_release" string="Doc Release No" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="date_doc_release" string="Doc Release Date" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </group>
                        <group>
                            <field name="document_state" string="Document Status" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="party" string="Jumlah Container" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="proforma" string="Proforma" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="proforma_date" string="Proforma Date" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="forwarder_name" string="Nama FF/PPJK" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="id_ff_ppjk" string="NPWP FF/PPJK" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="nm_cargoowner" string="Nama Cargo Owner" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                            <field name="npwpCargoOwner" string="NPWP Cargo Owner" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Containers">
                            <field name="container_ids" attrs="{'readonly': [('is_locked', '=', True)]}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_djbc_docs" model="ir.actions.act_window">
        <field name="name">DJBC Documents</field>
        <field name="res_model">djbc.docs</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_djbc_docs_tree"/>
        <field name="context">{'import_enabled': True}</field>
    </record>
</odoo>