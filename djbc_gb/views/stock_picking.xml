<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_form_inherit_djbc" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.djbc</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="djbc_docs_id" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}" options="{'no_quick_create': True}"/>
                <field name="jenis_dok_bc" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}"/>
                <field name="tgl_dok_bc" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_tree_inherit_djbc" model="ir.ui.view">
        <field name="name">stock.picking.tree.inherit.djbc</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_dest_id']" position="after">
                <field name="djbc_docs_id" attrs="{'invisible': [('picking_type_code', '=', 'internal')]}"/>
            </xpath>
        </field>
    </record>
</odoo>