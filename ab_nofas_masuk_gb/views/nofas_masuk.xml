<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nofas_masuk_tree" model="ir.ui.view">
            <field name="name">Laporan Pemasukan Tree</field>
            <field name="model">djbc.nofas_masuk_gb</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0">
                    <!-- <field name="sequence" string="No"/> -->
                    <field name="jenis_dok"/>
                    <field name="no_dok"/>
                    <field name="tgl_dok"/>
                    <field name="no_penerimaan"/>
                    <field name="tgl_penerimaan"/>
                    <field name="pengirim"/>
                    <field name="kode_barang"/>
                    <field name="nama_barang"/>
                    <field name="jumlah"/>
                    <field name="satuan"/>
                    <field name="nilai"/>
                    <field name="currency"/>
                    <field name="warehouse"/>
                </tree>
            </field>
        </record>

        <record id="nofas_masuk_form" model="ir.ui.view">
            <field name="name">Laporan Pemasukan Form</field>
            <field name="model">djbc.nofas_masuk_gb</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="jenis_dok"/>
                                <field name="no_dok"/>
                                <field name="tgl_dok"/>
                                <field name="no_penerimaan"/>
                                <field name="tgl_penerimaan"/>
                                <field name="pengirim"/>
                            </group>
                            <group>
                                <field name="kode_barang"/>
                                <field name="nama_barang"/>
                                <field name="jumlah"/>
                                <field name="satuan"/>
                                <field name="nilai"/>
                                <field name="currency"/>
                                <field name="warehouse"/>
                                <field name="product_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sisa Saldo">
                                <field name="sisa_saldo_ids" readonly="1">
                                    <tree>
                                        <field name="product_id" string="Product"/>
                                        <field name="lot_id" string="Lot Number"/>
                                        <field name="quantity" string="Quantity"/>
                                        <field name="product_uom_id" string="Unit of Measure"/>
                                        <field name="location_id" string="Location"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Consume Production">
                                <field name="consume_production_ids" readonly="1">
                                    <tree>
                                        <field name="reference" string="Consume"/>
                                        <field name="date" string="Date"/>
                                        <field name="product_id" string="Product"/>
                                        <field name="lot_id" string="Lot Number"/>
                                        <field name="qty_done" string="Consume"/>
                                        <field name="product_uom_id" string="Unit of Measure"/>
                                        <field name="location_dest_id" string="Location"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Outgoing">
                                <field name="outgoing_ids" readonly="1">
                                    <tree>
                                        <field name="picking_id" string="Incoming"/>
                                        <field name="date" string="Date"/>
                                        <field name="jenis_dok_bc" string="Jns Dok BC"/>
                                        <field name="no_dok_bc" string="No Dok BC"/>
                                        <field name="tgl_dok_bc" string="Tgl Dok BC"/>
                                        <field name="product_id" string="Product"/>
                                        <field name="lot_id" string="Lot Number"/>
                                        <field name="qty_done" string="Quantity"/>
                                        <field name="product_uom_id" string="Unit of Measure"/>
                                        <field name="location_dest_id" string="Location"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="nofas_masuk_action" model="ir.actions.act_window">
            <field name="name">Laporan Pemasukan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">djbc.nofas_masuk_gb</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>