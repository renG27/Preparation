<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="nofas_masuk_wizard_form" model="ir.ui.view">
            <field name="name">Laporan Pemasukan</field>
            <field name="model">djbc.nofas.masuk.wizard.gb</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="date_start" required="1"/>
                        <field name="date_end" required="1"/>
                        <field name="tipe_dokumen_id"/>
                    </group>
                    <footer>
                        <button name="generate_laporan" string="Submit" type="object" class="btn-primary"/>
                        <button name="generate_laporan_xls" string="Print Xlsx" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="nofas_masuk_wizard_action" model="ir.actions.act_window">
            <field name="name">Masukan Periode</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">djbc.nofas.masuk.wizard.gb</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="nofas_masuk_wizard_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>