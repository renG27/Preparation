<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="nofas_keluar_gb_tree" model="ir.ui.view">
		<field name="name">Laporan Pengeluaran Tree</field>
		<field name="model">djbc.nofas_keluar_gb</field>
		<field name="arch" type="xml">
			<tree string="Laporan Pengeluaran" create="0" edit="0">
				<!-- <field name="sequence" string="No"/> -->
				<field name="jenis_dok"/>
				<field name="no_aju" invisible="True"/>
				<field name="tgl_aju" invisible="True"/>
				<field name="no_dok"/>
				<field name="tgl_dok"/>
				<field name="no_pengeluaran"/>
				<field name="tgl_pengeluaran"/>
				<field name="no_bl" invisible= "True"/>
				<field name="tgl_bl" invisible="True"/>
				<field name="no_cont" invisible= "True"/>
				<field name="penerima"/>
				<field name="pemilik" invisible= "True"/>
				<field name="hs_code" invisible= "True" />
				<field name="kode_barang"/>
				<field name="nama_barang"/>
				<field name="jumlah"/>
				<field name="satuan"/>
				<field name="jumlah_kemasan" invisible="True"/>
				<field name="satuan_kemasan" invisible="True"/>
				<field name="nilai"/>
				<field name="currency"/>
				<field name="location" invisible="True"/>
				<field name="warehouse"/>
				<field name="alm_wh" invisible="True"/>
				<field name="kota_wh" invisible="True"/>
			</tree>
		</field>
	</record>

	<record id="nofas_keluar_gb_form" model="ir.ui.view">
        <field name="name">Laporan Pengeluaran Form</field>
        <field name="model">djbc.nofas_keluar_gb</field>
        <field name="arch" type="xml">
            <form create="0" edit="0">
                <sheet>
                    <div class="row">
                        <div class="col-6">
                            <group>
                                <field name="jenis_dok"/>
                                <field name="no_aju"/>
                                <field name="tgl_aju"/>
                                <field name="no_tgl_pendaftaran"/>
                                <field name="no_tgl_pengeluaran"/>
                                <field name="penerima"/>
                                <field name="nilai"/>
                                <field name="jml_sat_kemasan"/>
                                <field name="warehouse"/>
                            </group>
                        </div>
                        <div class="col-6">
                            <group>
                                <field name="hs_code"/>
                                <field name="kode_barang"/>
                                <field name="nama_barang"/>
                            </group>
                            <group string="Perhitungan">
                                <label for="tot_pengeluaran"/>
                                <div class="o_row">
                                    <field name="tot_pengeluaran" nolabel="1"/>
                                    <span class="oe_inline ml-2"><field name="satuan" nolabel="1"/></span>
                                </div>
                                <field name="total_produksi"/>
                                <field name="total_incoming"/>
                                <field name="control"/>
                            </group>
                        </div>
                    </div>
                    
                    <notebook>
                        <page string="Production">
                            <field name="production_ids" readonly="1">
                                <tree>
                                    <field name="reference" string="Production"/>
                                    <field name="date" string="Date"/>
                                    <field name="product_id" string="Product"/>
                                    <field name="lot_id" string="Lot Number"/>
                                    <field name="qty_done" string="Produce"/>
                                    <field name="product_uom_id" string="Unit of Measure"/>
                                    <field name="location_dest_id" string="Location"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Incoming">
                            <field name="incoming_ids" readonly="1">
                                <tree>
                                    <field name="picking_id" string="Incoming"/>
                                    <field name="date" string="Date"/>
                                    <field name="jenis_dok_bc" string="Jns Dok BC"/>
                                    <field name="no_dok_bc" string="No Dok BC"/>
                                    <field name="tgl_dok_bc" string="Tgl Dok BC"/>
                                    <field name="product_id" string="Product"/>
                                    <field name="lot_id" string="Lot Number"/>
                                    <field name="qty_done" string="Quantity"/>
                                    <field name="product_uom_id" string="Unit of Measure"/>
                                    <field name="location_dest_id" string="Location"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

	<record id="nofas_keluar_gb_action" model="ir.actions.act_window">
		<field name="name">Laporan Pengeluaran</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">djbc.nofas_keluar_gb</field>
		<field name="view_mode">tree,form</field>
	</record>
</odoo>